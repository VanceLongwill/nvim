{
  // "list.source.files.command": "rg --files --vimgrep .",
  "tsserver.enable": true,
  "tsserver.log": "verbose",
  "tsserver.npm": "/usr/local/bin/npm",
  "typescript.suggest.enabled": true,
  "typescript.validate.enable": true,
  "typescript.suggest.paths": true,
  "eslint.nodePath": "./node_modules/eslint",
  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "javascript.jsx"
  ],
  "typescript.referencesCodeLens.enable": true,
  "git.enableGutters": true,
  "list.normalMappings": {
    "o": "action:open",
    "t": "action:tabe",
    "v": "action:vsplit",
    "s": "action:split",
    "d": "expr:GetDeleteAction"
  },
  "list.insertMappings": {
    "<C-o>": "action:open",
    "<C-t>": "action:tabe",
    "<C-w>": "command:wincmd k"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".git/"],
      "filetypes": ["go"]
    }
  }
}
